<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MenuActivity"
    android:background="@drawable/menu_fondo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/menu_title"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:minHeight="90dp"
            android:minWidth="150dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.16" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:layout_weight="0.27">

            <ImageButton
                android:layout_width="260dp"
                android:layout_height="0dp"
                android:text="Tie In"
                android:id="@+id/button"
                android:onClick="GotoTieIn"
                android:background="@drawable/menu_b1tie"
                android:layout_weight="1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.4" />

            <ImageButton
                android:layout_width="260dp"
                android:layout_height="0dp"
                android:text="New Button"
                android:id="@+id/button2"
                android:onClick="GotoOrganize"
                android:background="@drawable/menu_b2org"
                android:layout_weight="1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.4" />

            <ImageButton
                android:layout_width="260dp"
                android:layout_height="0dp"
                android:text="New Button"
                android:id="@+id/button3"
                android:onClick="GotoGuess"
                android:background="@drawable/menu_b3guess"
                android:layout_weight="1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.4" />

            <ImageButton
                android:layout_width="260dp"
                android:layout_height="0dp"
                android:text="New Button"
                android:id="@+id/button4"
                android:onClick="Soon"
                android:layout_weight="1"
                android:background="@drawable/menu_b4goon" />
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="0.16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slide to Play"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</RelativeLayout>
